%% Section, chapter headings %%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\g@addto@macro\frontmatter{%

  \renewcommand*\raggedsection{\centering}
  \RedeclareSectionCommand[
    font={\centering},
    beforeskip=6pt,
    afterskip=16pt,
  ]{chapter}

  \setkomafont{chapter}{\color{black}\fontsize{16bp}{18bp}\selectfont}%

}
\g@addto@macro\mainmatter{%
  \renewcommand*\raggedsection{\raggedright}
  \RedeclareSectionCommand[font=\raggedright\fontsize{14}{6}\selectfont\MakeUppercase]{chapter}
  \RedeclareSectionCommand[font=\raggedright\fontsize{14}{6}\selectfont]{section}
  \RedeclareSectionCommand[font=\raggedright\fontsize{13}{6}\selectfont]{subsection}

  \setkomafont{chapter}{\color{frontgrey}\fontsize{16bp}{18bp}\selectfont}%



}


